{
  "name": "gulppress",
  "private": true,
  "homepage": "https://github.com/wwwoda/gulppress",
  "author": "Woda Digital",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache",
    "test": "turbo run test",
    "build": "lerna run build",
    "clean": "lerna clean",
    "lerna": "lerna",
    "lint": "lerna run lint",
    "nuke": "rm -r node_modules; for d in packages/*/node_modules; do echo $d; rm -r $d; done",
    "type-check": "lerna run type-check"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@types/node": "17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@wwwoda/tsconfig": "^1.1.0",
    "babel-core": "^6.26.3",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-woda": "^0.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "turbo": "^1.0.24",
    "typescript": "^4.5"
  },
  "engines": {
    "node": ">=12.0.0",
    "yarn": ">=1.0.0"
  },
  "importSort": {
    ".ts": {
      "parser": "typescript",
      "style": "module-scoped",
      "options": {}
    }
  },
  "respository": "https://github.com/wwwoda/gulppress",
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["lib/**"],
        "cache": false
      },
      "dev": {
        "dependsOn": ["^dev"],
        "outputs": ["lib/**"],
        "cache": false
      }
    }
  }
}
