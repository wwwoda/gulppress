/* eslint-disable import/no-extraneous-dependencies */
import * as gulppress from '@gulppress/scripts';
import { task } from 'gulp';
import cache from 'gulp-cache';

const config = gulppress.config.getConfig(__dirname, './gulppress.config', './gulppress.local.config');
const { tasks } = gulppress;

task('default', tasks.build.getBuildTask(config));
task('watch', tasks.watch.getWatchTask(config));
task('development', tasks.dev.getDevTask(config));
task('assets', tasks.assets.getAssetsTask(config));
task('build', tasks.build.getBuildTask(config));
task('favicon', tasks.favicon.getFaviconTask(config.favicon));
task('fonts', tasks.fonts.getFontsTask(config.fonts));
task('icons', tasks.icons.getIconsTask(config.icons));
task('images', tasks.images.getImagesTask(config.images));
task('scripts', tasks.scripts.getScriptsTask(config.scripts, config.browserList, config.base.createSeparateMinFiles));
task('serve', tasks.browserSync.getStartServerTask(config.browserSync));
task('styles', tasks.styles.getStylesTask(config.styles, config.base.createSeparateMinFiles));
task('translate', tasks.translate.getTranslationTask(config.translation));
task('vendorScripts', tasks.vendorScripts.getVendorScriptsTask(config.vendorScripts, config.base.dirname));
task('clearCache', () => cache.clearAll());
